<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="kioko.xavier.mdevstore" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="kioko.xavier.mdevstore.base.MainApplication"
        android:allowBackup="false"
        android:icon="@drawable/mdev"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m" >
        <activity
            android:name="kioko.xavier.mdevstore.activities.splashscreen"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="kioko.xavier.mdevstore.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="kioko.xavier.mdevstore.activities.ProductActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="kioko.xavier.mdevstore.activities.PhotoBigActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="kioko.xavier.mdevstore.activities.InformationActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="kioko.xavier.mdevstore.activities.SecretActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="kioko.xavier.mdevstore.activities.CategoriesActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity android:name="kioko.xavier.mdevstore.activities.SearchActivity" />
        <activity
            android:name="kioko.xavier.mdevstore.activities.CartActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
        <activity
            android:name="kioko.xavier.mdevstore.activities.OrderActivity"
            android:theme="@style/Theme.Swipe.Back.NoActionBar" />
    </application>

</manifest>